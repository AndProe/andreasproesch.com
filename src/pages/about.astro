import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About" description="Learn more about Andreas Proesch - technology leader, speaker, and writer.">
  <div class="about-page">
    <header class="page-header">
      <h1>About Me</h1>
